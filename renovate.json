{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":timezone(Asia/Tokyo)"
  ],
  "configMigration": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "schedule": [
    "* * * * *"
  ],
  "autoApprove": false,
  "automerge": false,
  "ignoreTests": false,
  "prCreation": "immediate",
  "dependencyDashboard": true,
  "enabledManagers": [
    "terraform",
    "terraform-version",
    "tflint-plugin"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "terraform",
        "terraform-version",
        "tflint-plugin"
      ],
      "separateMajorMinor": false,
      "separateMinorPatch": false,
      "groupName": "renovate-terraform",
      "labels": ["集計除外", "terraform", "renovate"],
      "commitMessage": "feat(terraform): update terraform version"
    }
  ],
  "rebaseWhen": "always"
}

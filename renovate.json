{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)"
  ],
  "enabledManagers": [
    "terraform",
    "terraform-version"
  ],
  "configMigration": true,
  "prHourlyLimit": 10,
  "prConcurrentLimit": 0,
  "schedule": [
    "* * * * *"
  ],
  "autoApprove": false,
  "automerge": false,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "ignoreTests": true,
  "packageRules": [
    {
      "matchManagers": [
        "terraform",
        "terraform-version"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "additionalBranchPrefix": "{{packageFileDir}}-",
      "commitMessageSuffix": "({{packageFileDir}})",
      "groupName": "terraform",
      "labels": [
        "集計除外",
        "terraform"
      ],
      "rebaseWhen": "behind-base-branch",
      "recreateWhen": "always",
      "matchPackageNames": [
        "/azurerm/"
      ]
    }
  ]
}

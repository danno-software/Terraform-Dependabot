{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)"
  ],
  "configMigration": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "schedule": [
    "* * * * *"
  ],
  "autoApprove": false,
  "automerge": false,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "ignoreTests": true,
  "prCreation": "immediate",
  "packageRules": [
    {
      "matchManagers": [
        "terraform",
        "terraform-version",
        "tflint-plugin"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "additionalBranchPrefix": "{{packageFileDir}}-test",
      "commitMessageSuffix": "({{packageFileDir}})",
      "groupName": "terraform",
      "labels": [
        "集計除外",
        "terraform"
      ],
      "rebaseWhen": "behind-base-branch",
      "recreateWhen": "always"
    }
  ]
}
